<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="StandarButton" TargetType="Button">
        <Setter Property="Padding" Value="5,8"/>
    </Style>

    <Style x:Key="ProductAddViewIconButton" TargetType="Button">
        <Setter Property="Content" Value="&#xE710;"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
    </Style>

    <Style x:Key="ProductViewIconButton" TargetType="Button">
        <Setter Property="Content" Value="&#xE712;"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
    </Style>

</ResourceDictionary>